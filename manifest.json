{
  "manifest_version": 2,

  "name": "Caption This",
  "description": "To add subtitles to streaming HTML5 videos",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/"
  ]
}